    <script>
        // --- JavaScript for Interactions and Animations ---

        // 1. Initialize Lucide Icons
        lucide.createIcons();

        // 2. Mobile Menu Toggle
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
            const icon = mobileMenuButton.querySelector('i');
            if (mobileMenu.classList.contains('hidden')) {
                icon.setAttribute('data-lucide', 'menu');
            } else {
                icon.setAttribute('data-lucide', 'x');
            }
            lucide.createIcons(); // Re-create icons for toggle effect
        });

        // Close mobile menu when a link is clicked
        document.querySelectorAll('#mobile-menu a').forEach(link => {
            link.addEventListener('click', () => {
                mobileMenu.classList.add('hidden');
                mobileMenuButton.querySelector('i').setAttribute('data-lucide', 'menu');
                lucide.createIcons();
            });
        });

        // 3. Header Scroll Behavior (Subtle design change)
        const header = document.getElementById('nav-header');

        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                // Shrink padding on scroll
                header.style.paddingTop = '0.5rem';
                header.style.paddingBottom = '0.5rem';
            } else {
                // Restore padding at the top
                header.style.paddingTop = '0';
                header.style.paddingBottom = '0';
            }
        });

        // 4. Scroll-Triggered Fade-In Animation (Advanced CSS/JS technique)
        const animatedElements = document.querySelectorAll('[data-animate]');
        const observer = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    // Apply the Tailwind animation class
                    entry.target.classList.add('animate-fadeInUp');
                    observer.unobserve(entry.target);
                }
            });
        }, {
            // Options for when the animation should trigger
            rootMargin: '0px',
            threshold: 0.1 // Triggers when 10% of the element is visible
        });

        animatedElements.forEach(el => {
            observer.observe(el);
        });

        // 5. Contact Form Submission Handling (Prevent actual submission)
        document.querySelector('form').addEventListener('submit', function(event) {
            event.preventDefault();
            const submitButton = event.target.querySelector('button[type="submit"]');
            const messageDiv = document.getElementById('contact-message');

            // Simulate form submission process
            submitButton.textContent = 'Sending...';
            submitButton.disabled = true;

            setTimeout(() => {
                submitButton.textContent = 'Send Message';
                submitButton.disabled = false;
                event.target.reset(); // Clear form inputs
                messageDiv.classList.remove('hidden'); // Show success message
                
                // Hide success message after a few seconds
                setTimeout(() => {
                    messageDiv.classList.add('hidden');
                }, 5000);
            }, 1500); // Simulate API call delay
        });
        
        // 6. Set Current Year in Footer
        document.getElementById('current-year').textContent = new Date().getFullYear();
    </script>
